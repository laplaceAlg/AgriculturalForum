@model WebApplication1.ModelViews.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập tài khoản";
}

<section class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Đăng nhập</h4>
                    <form method="post" action="~/Account/Login" >
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Địa chỉ Email</label>
                            <input type="email" class="form-control" id="email" asp-for="UserName" placeholder="Địa chỉ Email">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Mật khẩu">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

