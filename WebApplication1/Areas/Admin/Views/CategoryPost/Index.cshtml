@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebApplication1.Models.CategoryPost>
@{
    ViewBag.Title = "Danh mục bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int currentPage = ViewBag.CurrentPage;
    int stt = (currentPage - 1) * Model.PageSize;
}

@section Styles {
    <style>
        #sortable-table tbody tr {
            border-top: 1px solid #dee2e6;
        }
    </style>
}

<section class="section">
    <div class="section-header">
        <h1>@ViewBag.Title</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="~/Admin/CategoryPost">@ViewBag.Title</a></div>
            @*   <div class="breadcrumb-item"><a href="#">Components</a></div> *@
            <div class="breadcrumb-item">Trang @ViewBag.CurrentPage</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row py-2">
                            <div class="col-md-9">
                                <div class="row">
                                    <form class="d-flex w-100" action="~/Admin/CategoryPost/Index" method="get">
                                        <div class="form-group col-md-5 mb-0">
                                            <select id="isActiveSelect" class="custom-select" name="IsActive" asp-items="ViewBag.lsTrangThai" onchange="this.form.submit()">
                                                <option value="" disabled selected>Chọn trạng thái</option>
                                                <option value="">Chọn tất cả</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-7 mb-0">
                                            <div class="input-group mb-3">
                                                <input id="searchInput" type="text" class="form-control" placeholder="Nhập tiêu đề để tìm" autofocus name="searchValue" value="@ViewBag.SearchValue" oninput="this.form.submit()">
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-3 text-md-right">
                                <a class="btn btn-lg btn-primary" href="~/Admin/CategoryPost/Create"><i class="fas fa-plus mx-2"></i><span>Thêm danh mục</span></a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover" id="sortable-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tên danh mục</th>
                                        <th>Ngày tạo</th>
                                        <th>Trạng thái</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(++stt)</td>
                                            <td>@item.Title</td>
                                            <td>@item.CreateDate.Value.ToShortDateString()</td>
                                            @if (item.IsActive == true)
                                            {
                                                <td><div class="badge badge-success">Active</div></td>
                                            }
                                            else
                                            {
                                                <td><div class="badge badge-danger">Not Active</div></td>
                                            }
                                            <td class="d-flex align-items-center">
                                                <a href="~/Admin/CategoryPost/Edit/@item.Id" class="btn btn-icon btn-primary mr-2"><i class="far fa-edit"></i></a>
                                                <a href="~/Admin/CategoryPost/Delete/@item.Id" class="btn btn-icon btn-danger"><i class="fas fa-times"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <div aria-label="Page navigation example">
                            <ul class="pagination">
                                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="CategoryPost" asp-action="Index" asp-route-searchValue="@ViewBag.SearchValue" asp-route-IsActive="@ViewBag.IsAcTive" />
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            
            var isActiveSelect = document.getElementById("isActiveSelect");
            var searchInput = document.getElementById("searchInput");

            isActiveSelect.addEventListener("change", function () {
                sessionStorage.setItem("isActiveSelectValue", isActiveSelect.value);
            });

            searchInput.addEventListener("input", function () {
                sessionStorage.setItem("searchInputValue", searchInput.value);
            });

            
            var savedIsActiveSelectValue = sessionStorage.getItem("isActiveSelectValue");
            var savedSearchInputValue = sessionStorage.getItem("searchInputValue");

            if (savedIsActiveSelectValue) {
                isActiveSelect.value = savedIsActiveSelectValue;
            }

            if (savedSearchInputValue) {
                searchInput.value = savedSearchInputValue;
            }
        });
    </script>
}

