@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebApplication1.Models.CategoryProduct>
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int currentPage = ViewBag.CurrentPage;
    int stt = (currentPage - 1) * Model.PageSize;
}

@section Styles {
    <style>
        #sortable-table tbody tr {
            border-top: 1px solid #dee2e6;
        }
    </style>
}

<section class="section">
    <div class="section-header">
        <h1>@ViewBag.Title</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="~/Admin/CategoryProduct">@ViewBag.Title</a></div>
            @*   <div class="breadcrumb-item"><a href="#">Components</a></div> *@
            <div class="breadcrumb-item">Trang @ViewBag.CurrentPage</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12 ">
                <div class="card">
                    <div class="card-body">
                        <div class="row py-2">
                            <div class="col-md-9">
                                <div class="row">
                                    <form class="d-flex w-100" action="~/Admin/CategoryProduct/Index" method="get">
                                        <div class="form-group col-md-5 mb-0">
                                            <select id="isActiveSelect" class="custom-select" name="IsActive" asp-items="ViewBag.lsTrangThai" onchange="this.form.submit()">
                                                <option value="" disabled selected>Chọn trạng thái</option>
                                                <option value="">Chọn tất cả</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-7 mb-0">
                                            <div class="input-group mb-3">
                                                <input id="searchInput" type="text" class="form-control" placeholder="Nhập tiêu đề để tìm"  name="searchValue" value="@ViewBag.SearchValue">
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-3 text-md-right">
                                <a class="btn btn-lg btn-primary" href=""><i class="fas fa-plus mx-2"></i><span>Thêm danh mục</span></a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover" id="sortable-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Tên danh mục</th>
                                        <th>Ngày tạo</th>
                                        <th>Trạng thái</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(++stt)</td>
                                            <td>@item.Name</td>
                                            <td>@item.CreateDate.Value.ToShortDateString()</td>
                                            @if (item.IsActive == true)
                                            {
                                                <td><div class="badge badge-success">Active</div></td>
                                            }
                                            else
                                            {
                                                <td><div class="badge badge-danger">Not Active</div></td>
                                            }
                                            <td class="d-flex align-items-center">
                                                <a href="~/Admin/CategoryProduct/Edit/@item.Id" class="btn btn-icon btn-primary mr-2"><i class="far fa-edit"></i></a>
                                                <a href="~/Admin/CategoryProduct/Delete/@item.Id" class="btn btn-icon btn-danger"><i class="fas fa-times"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <div aria-label="Page navigation example">
                            <ul class="pagination">
                                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="CategoryProduct" asp-action="Index"  asp-route-searchValue="@ViewBag.SearchValue" asp-route-IsActive="@ViewBag.IsAcTive" />
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



