@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebApplication1.Models.User>
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int currentPage = ViewBag.CurrentPage;
    int stt = (currentPage - 1) * Model.PageSize;
}

@section Styles {
    <style>
        #sortable-table tbody tr {
            border-top: 1px solid #dee2e6;
        }
    </style>
}

<section class="section">
    <div class="section-header">
        <h1>@ViewBag.Title</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="~/Admin/CategoryProduct">@ViewBag.Title</a></div>
            @*   <div class="breadcrumb-item"><a href="#">Components</a></div> *@
            <div class="breadcrumb-item">Trang @ViewBag.CurrentPage</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12 ">
                <div class="card">
                 @*    <div class="card-header">
                        <h4>
                             <a href="~/Admin/User/Create" class="btn btn-success">Thêm mới</a>
                        </h4>
                        <div class="card-header-form">
                            <form>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <div class="input-group-btn">
                                        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div> *@

                    <div class="card-body">

                        <div class="row py-2">
                            <div class="col-md-12">

                                <form class="d-flex w-100">
                                    <div class="form-group col-md-5 mb-0">
                                        <select class="custom-select">
                                            <option>Option 1</option>
                                            <option>Option 2</option>
                                            <option>Option 3</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-7 mb-0">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="" aria-label="">
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>


                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover" id="sortable-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Họ và tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Ngày tham gia</th>
                                        <th>Trạng thái</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(++stt)</td>
                                            <td>@item.FullName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.MemberSince.Value.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))</td>
                                            @if (item.IsActive)
                                            {
                                                <td><div class="badge badge-success">Active</div></td>
                                            }
                                            else
                                            {
                                                <td><div class="badge badge-danger">Not Active</div></td>
                                            }
                                            <td class="d-flex align-items-center">
                                                <a href="~/Admin/User/Detail/@item.Id" class="btn btn-icon btn-info mr-2"><i class="fas fa-info-circle"></i></a>
                                                <a href="~/Admin/User/Edit/@item.Id" class="btn btn-icon btn-primary"><i class="far fa-edit"></i></a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer text-right">
                        <div aria-label="Page navigation example">
                            <ul class="pagination">
                                <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="User" asp-action="Index" />
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


</section>


