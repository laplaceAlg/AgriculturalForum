@model AgriculturalForum.Web.Models.Employee
@{
    ViewBag.Title = "Thông tin chi tiết tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<section class="section">
    <div class="section-header">
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card card-info">
                    <div class="card-body">

                        <div class="form-group">
                            <label class="control-label col-sm-2">Họ và tên:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.FullName</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Ngày sinh:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.BirthDate.Value.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Điện thoại:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.Phone</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Email:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.Email</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Địa chỉ:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@Model.Address</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Ảnh:</label>
                            <div class="col-lg-offset-2 col-sm-10">
                                <img id="Photo" src="~/uploads/userImages/@Model.Photo" class="img img-bordered" style="width: 200px;" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Trạng thái:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">@(Model.IsWorking ? "Người dùng đang làm việc" : "Người dùng đã nghỉ việc")</p>
                            </div>
                        </div>

                        <div class="card-footer text-right">
                            <a href="~/Admin" class="btn btn-secondary" type="reset">Quay lại</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</section>

