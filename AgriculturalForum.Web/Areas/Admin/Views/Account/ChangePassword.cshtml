@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Đổi mật khẩu";
}

<section class="section">
    <div class="section-header">
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="section-body">
        <form action="~/Admin/Account/ChangePassword" method="post">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Mật khẩu hiện tại</label>
                                <input type="password" class="form-control" name="CurrentPassword"  autofocus>
                                @Html.ValidationMessage("CurrentPassword", new { @style = "color:#f00" })
                            </div>

                            <div class="form-group">
                                <label>Mật khẩu mới</label>
                                <input type="password" class="form-control" name="NewPassword" >
                                @Html.ValidationMessage("NewPassword", new { @style = "color:#f00" })
                            </div>

                            <div class="form-group">
                                <label>Xác nhận mật khẩu</label>
                                <input type="password" class="form-control" name="ConfirmPassword">
                                @Html.ValidationMessage("ConfirmPassword", new { @style = "color:#f00" })
                            </div>

                            <div class="form-group">
                                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                            </div>

                        </div>
                        <div class="card-footer text-right">
                            <button class="btn btn-primary mr-1" type="submit">Xác nhận</button>
                            <a href="~/Admin" class="btn btn-secondary" type="reset">Quay lại</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</section>

