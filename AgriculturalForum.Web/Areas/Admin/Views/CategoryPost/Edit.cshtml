@model AgriculturalForum.Web.Models.CategoryPost
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="section">
    <div class="section-header">
        <h1>@ViewBag.Title</h1>
        <div class="section-header-breadcrumb">
          @*   <div class="breadcrumb-item active"><a href="#">Dashboard</a></div> *@
            <div class="breadcrumb-item"><a href="~/Admin/CategoryPost">Danh mục bài viết</a></div>
            <div class="breadcrumb-item">@ViewBag.Title</div>
        </div>
    </div>

    <div class="section-body">
        <form action="~/Admin/CategoryPost/Save" method="post">
            <input type="hidden" name="@nameof(Model.Id)" value="@Model.Id" />
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        @*  <div class="card-header">
                        <h4>HTML5 Form Basic</h4>
                        </div> *@
                        <div class="card-body">
                            <div class="form-group">
                                <label>Tiêu đề</label>
                                <input type="text" class="form-control" name="@nameof(Model.Title)" value="@Model.Title" autofocus>
                                @Html.ValidationMessage("Name", new { @style = "color:#f00" })
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea class="form-control" name="@nameof(Model.Description)">@Model.Description</textarea>
                            </div>

                            <div class="form-group">
                                @*  <div class="control-label">Toggle switch single</div> *@
                                <label class="custom-switch">
                                    <input type="checkbox" name="@nameof(Model.IsActive)" value="true" class="custom-switch-input" @(Model.IsActive ? "checked" : "")>
                                   @*  <input type="checkbox" asp-for="IsActive" class="custom-switch-input"> *@
                                    <span class="custom-switch-indicator"></span>
                                    <span class="custom-switch-description">Hoạt động</span>
                                </label>
                            </div>

                            <div class="form-group">
                                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                            </div>

                        </div>
                        <div class="card-footer text-right">
                            <button class="btn btn-primary mr-1" type="submit">Lưu dữ liệu</button>
                            <a href="~/Admin/CategoryPost" class="btn btn-secondary" type="reset">Quay lại</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</section>

