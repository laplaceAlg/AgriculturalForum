@using PagedList.Core.Mvc
@using Microsoft.AspNetCore.Http
@model AgriculturalForum.Web.Models.User
@{
    ViewBag.Title = _localization.Getkey("Account");
    var accountId = Context.Session.GetString("UserId");
    List<Post> lsPosts = ViewBag.ListPosts;
    List<Product> lsProducts = ViewBag.ListProducts;
}
@section Styles {
    <style>
        .card-user {
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border: none;
        }
        .card-primary {
            border-top: 2px solid #1e4356;
        }
        .team {
            padding-bottom: 0;
        }

        .team .member {
            margin-bottom: 0px;
        }

        .card-custom {
            border-radius: .125rem;
            background-color: #fff;
        }

        .card-custom:hover{
            transform: translateY(-1px);
                border-color: #86b7fe;
        }

        .card .card-body {
            padding: 16px 16px 8px;
        }

        .member-img img {
            width: 100%;
            min-width: 100%;
            height: 180px;
            object-fit: cover;
            object-position: top;
        }

        .text-limit {
            line-height: 2rem;
            max-height: 4rem;
            overflow: hidden;
            flex: 1;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            text-align: left;
        }

        .description-limit {
            max-width: 220px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .text-hover:hover {
            color: darkred !important;
        }

        .nav-tabs .nav-item .nav-link.active {
            border-color: transparent !important;
            border-bottom: 2px solid #198754 !important;
        }

        .nav-tabs .nav-link {
            color: #000 !important;
        }

            .nav-tabs .nav-link:hover {
                color: lightseagreen !important;
            }
    </style>
}
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>
                @ViewBag.Title
            </h2>
            <ol>
                <li><a href="~/Home">@_localization.Getkey("Home")</a></li>
                <li>@Model.FullName</li>
            </ol>
        </div>

    </div>
</section>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-user card-primary mb-4">
                <div class="row g-0 p-2">
                    <div class="col-md-2">
                        <img class="img-thumbnail rounded-circle" src="~/uploads/userImages/@Model.ProfileImage" alt="Profile Image" style="height: 190px;">
                    </div>
                    <div class="col-md-10">
                        <div class="card-body">
                            <h4 class="mb-3">@Model.FullName</h4>
                            <p><i class="fas fa-calendar me-2"></i> @_localization.Getkey("Joined"): @Model.MemberSince</p>
                            <p><i class="fas fa-phone me-2"></i> @_localization.Getkey("Contact"): <a href="tel:34534534">@Model.Phone</a></p>
                            <p><i class="fas fa-location-dot me-2"></i>@_localization.Getkey("Address"):  @string.Join(", ", new[] { Model.Address, Model.Province }.Where(x => !string.IsNullOrEmpty(x)))</p>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <span>@_localization.Getkey("Posts"): @Model.Posts.Count()</span>
                                <span>@_localization.Getkey("Replies"): @Model.PostReplies.Count()</span>
                            </div>
                        </div>
                    </div>
                </div>
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#post-list" data-bs-toggle="tab">@_localization.Getkey("Postings")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#product-list" data-bs-toggle="tab">@_localization.Getkey("PostedProduct")</a>
                    </li>
                </ul>
            </div>
            <div class="card ">
                <div class="tab-content">
                    <!--Danh sách bài viết-->
                    <div class="tab-pane active container-fluid" id="post-list">
                        @if (lsPosts != null && lsPosts.Count() > 0)
                        {
                            <div class="row">
                                @foreach (var post in lsPosts)
                                {
                                    <div class="col-md-12 mb-2 mt-2">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="row align-items-center">
                                                    <div class="col-md-3">
                                                        <a href="/Post/Detail/@post.Id">
                                                            <img class="img-fluid rounded" src="~/uploads/postImages/@post.Image" alt="Image" style="height: 180px;">
                                                        </a>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <h5 class="card-title">
                                                            <a href="/Post/Detail/@post.Id" class="text-dark  text-hover">@post.Title</a>
                                                        </h5>
                                                        <hr />
                                                        <div class="d-flex align-items-center">
                                                            <img class="img-fluid rounded-circle me-3" src="~/uploads/userImages/@Model.ProfileImage" alt="avatar" style="height:40px; width:40px;" />
                                                            <ul class="list-unstyled mb-0 d-flex justify-content-between flex-grow-1">
                                                                <li class="align-self-start">
                                                                    <a href="/Post/Detail/@post.Id" class="text-secondary text-hover">
                                                                        <i class="bi bi-clock me-1"></i>
                                                                        @post.CreateDate
                                                                    </a>
                                                                </li>
                                                                <li class="align-self-end">
                                                                    <a href="/Post/Detail/@post.Id" class="text-secondary text-hover">
                                                                        <i class="bi bi-reply me-1"></i>
                                                                        @post.PostReplies.Count()
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                        <div class="mt-3">
                                                            <p class="text-limit">@SubString.ExtractTextFromHtml(post.Content, 1000)</p>
                                                            <div class="text-end">
                                                                <a href="/Post/Detail/@post.Id" class="text-body text-hover">
                                                                    @_localization.Getkey("ReadMore")
                                                                    <i class="fa-solid fa-chevron-right"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (ViewBag.TotalPost > 3)
                            {
                                <div class="mb-2 mt-2 text-end">
                                    <a href="~/Search/ListPosts/@Model.Id" class="btn btn-primary">@_localization.Getkey("SeeMore")</a>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="d-flex align-items-center" style="height: 100px;">
                                <p class="text-muted">Chưa có bài đăng nào</p>
                            </div>
                        }
                    </div>

                    <!-- Danh sách các mặt hàng -->
                    <div class="tab-pane container-fluid" id="product-list">
                        @if (lsProducts != null && lsProducts.Count() > 0)
                        {
                            <div class="team" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
                                <div class="row">
                                    @foreach (var product in lsProducts)
                                    {
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6 d-flex align-items-stretch my-3">
                                            <div class="card w-100 card-custom">
                                                <div class="member">
                                                    <div class="member-img ">
                                                        <img src="~/uploads/productImages/@product.Image" alt="Product 1">
                                                        @if (accountId != null && int.Parse(accountId) == product.UserId)
                                                        {
                                                            <div class="social">
                                                                <a href="~/Shop/Edit/@product.Id"><i class="bx bx-edit"></i></a>
                                                                <a href="~/Shop/Delete/@product.Id"><i class="bx bx-trash"></i></a>
                                                            </div>
                                                        }
                                                    </div>
                                                    <a href="~/Shop/Detail/@product.Id" style="text-decoration: none; color: inherit;">
                                                        <div class="card-body member-info">
                                                            <h5 class="card-title description-limit">@product.Name</h5>
                                                            <p class="card-text description-limit"> @product.Description </p>
                                                            <span>@product.Price.Value.ToString("#,##0") vnđ</span>

                                                        </div>
                                                    </a>
                                                </div>
                                            </div>


                                        </div>
                                    }
                                    @if (ViewBag.TotalProduct > 5)
                                    {
                                        <div class="mb-3 text-end">
                                            <a href="~/Search/ListProducts/@Model.Id" class="btn btn-primary">@_localization.Getkey("SeeMore")</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center" style="height: 100px;">
                                <p class="text-muted">Chưa có mặt hàng nào được đăng</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>