@model AgriculturalForum.Web.ModelViews.RegisterViewModel

@{
    ViewData["Title"] = _localization.Getkey("Register");
}

<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>@_localization.Getkey("Register")</h2>
        </div>
    </div>
</section>


<div class="login-register-area section-space-y-axis-100 mt-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 pt-10 pt-lg-0">
                <form method="post" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="login-form">
                        <div class="mb-3">
                            <label for="fullName" class="form-label fw-bold">@_localization.Getkey("FullName")</label>
                            <input type="text" class="form-control" id="fullName" asp-for="FullName" placeholder="@_localization.Getkey("FullName")">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">@_localization.Getkey("Email")</label>
                            <input type="email" class="form-control" id="email" asp-for="Email" placeholder="@_localization.Getkey("Email")">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label fw-bold">@_localization.Getkey("Phone")</label>
                            <input type="tel" class="form-control" id="phone" asp-for="Phone" placeholder="@_localization.Getkey("Phone")">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label fw-bold">@_localization.Getkey("Address")</label>
                            <input type="text" class="form-control" id="address" asp-for="Address" placeholder="@_localization.Getkey("Address")">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label fw-bold">@_localization.Getkey("Password")</label>
                                <input type="password" class="form-control" id="password" asp-for="Password" placeholder="@_localization.Getkey("Password")">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="confirmPassword" class="form-label fw-bold">@_localization.Getkey("ConfirmPassword")</label>
                                <input type="password" class="form-control" id="confirmPassword" asp-for="ConfirmPassword" placeholder="@_localization.Getkey("ConfirmPassword")">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">@_localization.Getkey("Register")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

