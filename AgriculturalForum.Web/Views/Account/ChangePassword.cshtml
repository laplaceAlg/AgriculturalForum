@model AgriculturalForum.Web.ModelViews.ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}

<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
            <ol>
                <li><a href="~/Account/Detail">Tài khoản của bạn</a></li>
                <li>@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>

<section id="blog" class="blog">
    <div class="container" data-aos="fade-up">

        <div class="row">
            <div class="col-lg-4">

                @await Html.PartialAsync("_SidebarPartialView.cshtml")

            </div>

            <div class="col-lg-8 entries">

                <article class="entry">

                    <h2 class="entry-title">
                      Đổi mật khẩu
                    </h2>

                    <div class="entry-content">
                        <form asp-controller="Account" asp-action="ChangePassword" method="post">
                            <div class="mb-3">
                                <label for="passwordNow" class="form-label">Mật khẩu hiện tại</label>
                                <input asp-for="PasswordNow" type="password" class="form-control" id="passwordNow">
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Mật khẩu mới</label>
                                <input asp-for="Password" type="password" class="form-control" id="password">
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Nhập lại mật khẩu mới</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword">
                            </div>
                            <div class="mb-3">
                                <button class="btn btn-primary" type="submit">Lưu thay đổi</button>
                            </div>
                        </form>
                    </div>

                </article><!-- End blog entry -->

            </div><!-- End blog entries list -->
        </div>
    </div>
</section>
