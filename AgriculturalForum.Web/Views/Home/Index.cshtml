@model AgriculturalForum.Web.ModelViews.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
@section Styles {
	<style>
		.see-more {
			border-bottom: 2px solid #214252;
		}

		a {
			color: #214252;
			text-decoration: none;
		}

		a:hover {
			color: #1a3542;
		}

		.author-figure img {
			width: 30px;
			border-radius: 50%;
		}

		.entry-title {
			font-size: 24px !important;
		}

		.text-limit {
			height: 4.5rem;
			line-height: 2rem;
			max-height: 6rem;
			overflow: hidden;
			flex: 1;
			display: -webkit-box;
			-webkit-box-orient: vertical;
			-webkit-line-clamp: 3;
			text-align: left;
		}

		.description-limit {
			max-width: 220px;
			overflow: hidden;
			white-space: nowrap;
			text-overflow: ellipsis;
		}

		.entry-img .img-fluid{
			height: 220px !important;
			width: 100%;
		}

		.entry-title {
			height: 58px;
			overflow: hidden; 
		}

		.product-item {
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
			transition: box-shadow 0.1s ease;
		}

		.product-item:hover {
			box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
			transform: translateY(-1px);
		}
	</style>
}

