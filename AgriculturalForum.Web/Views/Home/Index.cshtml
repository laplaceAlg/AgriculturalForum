<section class="blog">
	<div class="container">

		<div class="row mb-4">
			<div class="col-sm-6">
				<h2 class="posts-entry-title">@_localization.Getkey("Posts")</h2>
			</div>
			<div class="col-sm-6 text-sm-end"><a href="~/Forum" class="see-more">@_localization.Getkey("ViewAll")</a></div>
		</div>

		<div class="row">
			@foreach (var item in Model.Post)
			{
				<div class="col-md-6 col-lg-4">
					<article class="entry">

						<div class="entry-img">
							<img src="~/uploads/postImages/@item.Image" alt="" class="img-fluid" >
						</div>

						<h2 class="entry-title">
							<a href="~/Post/Detail/@item.Id">@item.Title</a>
						</h2>

						<div class="entry-meta">
							<ul>
								<li class="d-flex align-items-center">
									<span class="author-figure mb-0 me-3 float-start"><img src="~/@item.User.ProfileImage" alt="Image" class=" img-fluid"></span>
									<a href="~/User/Index/@item.UserId">@item.User.FullName</a>
								</li>
								<li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a href="blog-single.html"><time datetime="@item.CreateDate">@item.CreateDate.Value.ToShortDateString()</time></a></li>
							</ul>
						</div>

						<div class="entry-content" >
							<p class="text-limit">
								@Html.Raw(SubString.ExtractTextFromHtml(item.Content, 2000))
							</p>
							<div class="read-more">
								<a href="~/Post/Detail/@item.Id">@_localization.Getkey("ReadMore")</a>
								@* <<a href="single.html" class="btn btn-sm btn-outline-primary">Read More</a> *@
							</div>
						</div>

					</article>
				</div>
			}
		</div>

	</div>
</section>

<!-- Start posts-entry -->
<section class="section posts-entry posts-entry-sm bg-light">
	<div class="container">
		<div class="row mb-4">
			<div class="col-sm-6">
				<h2 class="posts-entry-title">@_localization.Getkey("Products")</h2>
			</div>
			<div class="col-sm-6 text-sm-end">
				<a href="~/Shop" class="see-more">@_localization.Getkey("ViewAll")</a>
			</div>
		</div>
		<div class="row  g-3">

				@foreach (var item in Model.Products)
				{
					<div class="col-md-6 col-lg-3 services">
						<a href="~/Shop/Detail/@item.Id">
							<div class="card icon-box-cyan product-item">
							<img class="card-img-top img-fluid rounded" src="~/uploads/productImages/@item.Image" alt="#" style="height:200px">
								<div class="card-body">
									<h5 class="card-title">@item.Name</h5>
								<div class="card-text description-limit">@item.Description</div>
									<div style="color:red; font-size: 18px;">@item.Price đ</div>
								</div>
								<div class="card-footer">@item.User.Address</div>
							</div>
						</a>
					</div>
				}
		</div>
	</div>
</section>
<!-- End posts-entry -->





