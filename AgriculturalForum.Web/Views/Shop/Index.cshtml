@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<AgriculturalForum.Web.Models.Product>
@{
    ViewBag.Title = "Shop";
    List<CategoryProduct> ListOfCategories = ViewBag.ListOfCategories;
}
@section Styles {
    <style>
        .text-limit {
            max-width: 220px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .product-item {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.1s ease;
        }

            .product-item:hover {
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
                transform: translateY(-1px);
            }

    </style>
}
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>@_localization.Getkey(ViewBag.Title)</h2>
            <ol>
                @*   <li><a href="index.html">Home</a></li> *@
                <li><a href="~/Shop">@_localization.Getkey(ViewBag.Title)</a></li>
                @if (ViewBag.CurrentCateID != 0)
                {
                    <li><a href="~/Shop/Index/@ViewBag.CurrentCateID">@ViewBag.CateName</a></li>
                }
                <li>@_localization.Getkey("Page") @ViewBag.CurrentPage</li>
            </ol>
        </div>

    </div>
</section>

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="list-group">
                @foreach (var item in ListOfCategories)
                {
                    <a href="~/Shop/Index/@item.Id" class="list-group-item list-group-item-action">@item.Name</a>
                }
            </div>

            <div class="mt-3 mb-3">
                <a href="~/Shop/Create" class="btn btn-primary btn-block">
                    <i class="fa fa-plus"></i> @_localization.Getkey("NewProduct")
                </a>
            </div>

        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <form id="formSearch" action="~/Shop/Index" method="get">
                        <div class="input-group">
                            <input name="searchValue" type="text" class="form-control" placeholder="Tìm kiếm sản phẩm">
                            <button class="btn btn-info" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var product in Model)
                    {
                        <div class="col-md-6 col-lg-4 services">
                            <a href="~/Shop/Detail/@product.Id">
                                <div class="card icon-box-cyan product-item">
                                    <img class="card-img-top img-fluid " src="~/uploads/productImages/@product.Image" alt="#" style="height:200px ">
                                    <div class="card-body">
                                        <h5 class="card-title">@product.Name</h5>
                                        <div class="card-text text-limit">@product.Description</div>
                                        <div style="color:red; font-size: 18px;">@product.Price.Value.ToString("#,##0") đ</div>
                                    </div>
                                    <div class="card-footer">@product.User.Address</div>
                                </div>
                            </a>
                        </div>
                    }
                    <div class="pagination-area pt-10">
                        <ul class="pagination justify-content-center">
                            <pager class="pager-container" list="@Model" options="@PagedListRenderOptions.Bootstrap4PageNumbersPlusPrevAndNext" asp-controller="Shop" asp-route-searchValue="@ViewBag.SearchValue" asp-action="Index" />
                        </ul>
                    </div>
                }
                else
                {
                    <p>@_localization.Getkey("NoProduct")</p>
                }
            </div>
        </div>

    </div>
</div>
