@model AgriculturalForum.Web.Models.Product
@{
    ViewBag.Title = _localization.Getkey("ProductDetail");
    List<Product> similarProducts = ViewBag.similarProducts;
}
@section Styles {
    <style>
        .text-limit {
            max-width: 190px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .product-item {
            background-color: #fff;
            border-radius: .125rem;
            box-shadow: 0 .0625rem .125rem 0 rgba(0, 0, 0, .1);
        }

            .product-item:hover {
                /* box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2); */
                transform: translateY(-1px);
                border-color: #86b7fe;
            }


        .product-column {
            background-color: #fff;
            padding: 0 5px;
            margin: 5px 0;
        }

        .carousel-image {
            width: 100%;
            min-width: 100%;
            height: 500px;
        }

      
    </style>
}
<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
            <ol>
                <li><a href="~/Home">@_localization.Getkey("Home")</a></li>
                <li><a href="~/Shop">@_localization.Getkey("Shop")</a></li>
                <li>@ViewBag.Title</li>
            </ol>
        </div>
    </div>
</section>

<section id="portfolio-details" class="portfolio-details ">
    <div class="container">
        <div class="row gy-4" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
            <!-- Hình ảnh và thông tin sản phẩm -->
            <div class="col-lg-8">
                <div id="carouselExampleIndicators" class="carousel slide portfolio-details-slider swiper w-100" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        @for (var i = 1; i <= Model.ProductImages.Count; i++)
                        {
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" aria-label="Slide @i"></button>
                        }
                    </div>
                    <div class="carousel-inner">
                        <a href="~/uploads/productImages/@Model.Image" class="carousel-item portfolio-lightbox swiper-slide text-center active">
                            <img src="~/uploads/productImages/@Model.Image" class="portfolio-image d-block w-100 carousel-image" alt="...">
                        </a>
                        @foreach (var item in Model.ProductImages)
                        {
                            <a href="~/uploads/productImages/@item.Image" class="carousel-item portfolio-lightbox swiper-slide text-center">
                                <img src="~/uploads/productImages/@item.Image" alt="" class="portfolio-image d-block w-100 carousel-image">
                            </a>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div class="portfolio-info mt-4">
                    <h3>@_localization.Getkey("ProductInformation")</h3>
                    <ul>
                        <li><strong>@_localization.Getkey("ProductName"): </strong>@Model.Name</li>
                        <li><strong>@_localization.Getkey("CreateDate"): </strong>@Model.CreateDate</li>
                        <li><strong>@_localization.Getkey("CategoryProduct"): </strong>@Model.CategoryProduct.Name</li>
                        <li><strong>@_localization.Getkey("Price"): </strong>@Model.Price đ</li>
                        <li><strong>@_localization.Getkey("Description"): </strong>@Model.Description</li>
                    </ul>
                </div>
            </div>

            <!-- Thông tin người bán -->
            <div class="col-lg-4">
                <div class="portfolio-info d-flex flex-column justify-content-center" style="padding: 10px !important;">
                    <div class="d-flex align-items-center flex-wrap">
                        <img src="~/uploads/userImages/@Model.User.ProfileImage" alt="Seller Avatar" class="img-fluid rounded-circle me-3" style="width: 80px; height: 80px;">
                        <h5 class="mb-0">@Model.User.FullName</h5>
                        <a href="~/Shop/MyPost/@Model.User.Id" class="btn btn-sm btn-secondary ms-auto mt-2 mt-lg-0">@_localization.Getkey("ViewPage")</a>
                    </div>
                    <a class="btn btn-primary my-4" href="tel:+00151515">
                        <i class="fa-solid fa-mobile"></i> @_localization.Getkey("Contact"): @Model.User.Phone
                    </a>
                    <p class="mb-3">
                        <i class="fa-solid fa-location-dot"></i>
                        <strong>@_localization.Getkey("Address"): </strong> @Model.User.Address, @Model.User.Province
                        @*   <a href="https://www.google.com/maps/search/?api=1&query=@Model.User.Address" target="_blank">@Model.User.Address</a> *@
                    </p>
                </div>
            </div>

        </div>
        <!-- /Thông tin người bán -->
    </div>
</section>
@if (similarProducts != null && similarProducts.Count() > 0)
{
    <div class=" container shadow mb-4">
        <div id="product-list" style="padding: 10px !important;">

            <h4 class="my-2">@_localization.Getkey("RelatedProducts")</h4>
            <div class="row " data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
                @foreach (var item in similarProducts)
                {
                    <div class="col-md-4 col-lg-3 col-12 col-sm-6 product-column">
                        <a href="~/Shop/Detail/@item.Id">
                            <div class="card product-item">
                                <img class="img-fluid" src="~/uploads/productImages/@item.Image" alt="#" style="height:200px ">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <div class="card-text text-limit">@item.Description</div>
                                    <div style="color:red; font-size: 18px;">@item.Price.Value.ToString("#,##0") đ</div>
                                </div>
                                <div class="card-footer">@item.User?.Province</div>
                            </div>
                        </a>
                    </div>
                }
            </div>

        </div>
    </div>
}