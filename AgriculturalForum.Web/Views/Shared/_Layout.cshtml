<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"]</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/themes/assets/img/favicon.png" rel="icon">
    <link href="~/themes/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,700,700i&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="your-integrity-value" crossorigin="anonymous" />
    <!-- Vendor CSS Files -->
    <link href="~/themes/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/themes/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/themes/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/themes/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/themes/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/themes/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/themes/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/themes/assets/css/style.css" rel="stylesheet">

    <style>
        .form-control:focus {
            box-shadow: 0 0 0 .05rem #3c8dbc !important;
        }

        .navbar .dropdown ul {
            left: -70px;
            border-radius: .25rem;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
    <!-- =======================================================
    * Template Name: Moderna
    * Updated: Jan 29 2024 with Bootstrap v5.3.2
    * Template URL: https://bootstrapmade.com/free-bootstrap-template-corporate-moderna/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <!-- ======= Header ======= -->
    @{
        await Html.RenderPartialAsync("_MainHeader");
    }
    <!-- End Header -->
    @if (ViewBag.IsHomePage != null && ViewBag.IsHomePage)
    {
        <section id="hero" class="d-flex justify-cntent-center align-items-center">
            <div id="heroCarousel" class="container carousel carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <div class="carousel-container">
                        <h2 class="animate__animated animate__fadeInDown">@_localization.Getkey("TitleHeader1")</h2>
                        <p class="animate__animated animate__fadeInUp">@_localization.Getkey("Slogan1")</p>
                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="carousel-item">
                    <div class="carousel-container">
                        <h2 class="animate__animated animate__fadeInDown">@_localization.Getkey("TitleHeader2")</h2>
                        <p class="animate__animated animate__fadeInUp">@_localization.Getkey("Slogan2")</p>
                    </div>
                </div>

                <!-- Slide 3 -->
                <div class="carousel-item">
                    <div class="carousel-container">
                        <h2 class="animate__animated animate__fadeInDown">@_localization.Getkey("TitleHeader3")</h2>
                        <p class="animate__animated animate__fadeInUp">@_localization.Getkey("Slogan3")</p>
                    </div>
                </div>

                <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bx bx-chevron-left" aria-hidden="true"></span>
                </a>

                <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon bx bx-chevron-right" aria-hidden="true"></span>
                </a>

            </div>
        </section>
    }

    <main id="main">
        @RenderBody()
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    @{
        await Html.RenderPartialAsync("_MainFooter");
    }
    <!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/themes/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/themes/assets/vendor/aos/aos.js"></script>
    <script src="~/themes/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/themes/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/themes/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/themes/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/themes/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/themes/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/themes/assets/js/main.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>